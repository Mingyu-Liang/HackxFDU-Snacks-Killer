<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
            android:id="@+id/hintView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="满减+配送费"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@color/backResColor"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/firstResInfo"
                android:layout_width="125dp"
                android:layout_height="81dp"
                android:text="第一家"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@color/firstResColor"/>

        <TextView
            android:id="@+id/secondResInfo"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:background="@color/secondResColor"
            android:gravity="center"
            android:text="第二家"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/thirdResInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/thirdResColor"
            android:gravity="center"
            android:text="第三家"
            android:textSize="15dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_dish_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>